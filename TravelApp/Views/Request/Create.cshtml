@model Travel.Models.Request
@using Resources
<div class="form-horizontal">
    @using (Ajax.BeginForm(actionName: "Create", controllerName: "Request", ajaxOptions: new AjaxOptions { OnSuccess = "showSnack" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TourID)

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.OtherContacts, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.OtherContacts, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OtherContacts, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.CountOfTourist, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.CountOfTourist, new { htmlAttributes = new { @class = "form-control", @min = 1, @max = 1000 } })
                @Html.ValidationMessageFor(model => model.CountOfTourist, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.TourDate, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TourDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-12">
                @Html.ValidationMessageFor(model => model.TourDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @rows = 4 })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div class="theme-button-container">
                    <button type="submit" class="btn btn-default theme-button theme-button-small"><i class="glyphicon glyphicon-send"></i> @Resources.Body.Send</button>
                </div>
            </div>
        </div>

    }
</div>