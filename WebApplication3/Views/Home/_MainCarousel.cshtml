@model IEnumerable<Travel.Models.MainCarousel>

<div id="mainCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <li data-target="#mainCarousel" data-slide-to="@i" class="@(i == 0 ? "active": "")"></li>
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        @{ int j = 0;}
        @foreach (var item in Model)
        {
            <div class="main-carousel-slide-container item @(j++ ==0 ? "active": "")">
                <a href="@item.LinkUrl">
                    <img src="@item.ImageUrl" style="width:100%" />
                    <div class="main-carousel-title">
                        
                    </div>
                </a>

                <div class="carousel-caption">
                    <h1>@item.Title</h1>
                    <h3>@item.SubTitle</h3>
                    <h3>@item.Details</h3>
                    <h3>@item.SubDetails</h3>
                </div>
            </div>
        }
    </div>

    <!-- Left and right controls -->
    @*<a class="left carousel-control" href="#mainCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#mainCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>*@
</div>