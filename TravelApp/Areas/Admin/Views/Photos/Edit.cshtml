@model Travel.Models.Photo

@using Travel.Helper;

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4><b>@Model.PhotoGallery.GalleryCommonName</b> gallery photo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PhotoID)
        @Html.HiddenFor(model => model.GalleryID)
        @Html.HiddenFor(model => model.Path)

        <div class="form-group">
            <img src="@Images.GetThumbFullPath(Model.Path, Model.GalleryID)" class="photo-img-thumb" />
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = Model.GalleryID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
